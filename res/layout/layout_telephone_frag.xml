<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddafaaa8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Phone Verification"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/mEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignStart="@+id/textView23"
            android:layout_below="@+id/textView23"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:digits="+0123456789"
            android:ems="10"
            android:hint="Include country code (Ex. +91)"
            android:inputType="phone" />

        <Button
            android:id="@+id/mButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@color/ColorPrimary"
            android:text="Send Verification Code"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mEditText"
            android:layout_alignStart="@+id/mEditText"
            android:layout_below="@+id/mEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="Standard carrier SMS charges may apply in some countries"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/ColorPrimary" />

        <View
            android:id="@+id/botMargin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/mButton"
            android:background="#ffffff" />


    </RelativeLayout>


</LinearLayout>